    .section-header {
      display: block;
      background-color: #fff200;              /* Bright yellow background */
      padding: 12px 16px;                     /* Space inside header */
      font-family: 'Saira Condensed', Arial, sans-serif;
      font-size: 22px;
      font-weight: 700;
      color: #166886;                         /* Teal text */
      margin: 32px 0 16px;                    /* Vertical spacing before/after */
      border-radius: 4px;
